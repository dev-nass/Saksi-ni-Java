	public void keyTypedDIGIT(KeyEvent e) {
		char c = e.getKeyChar();
		
		if(!Character.isDigit(c)) {
			e.consume();
		}
	}
	
	public void keyTypedSTRING(KeyEvent e) {
		char c = e.getKeyChar();
		
		if(Character.isDigit(c)) {
			e.consume();
		}
	}
	
	
	
	
	
