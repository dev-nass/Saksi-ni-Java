import java.util.Scanner;

public class Main {
	
	static Scanner scanner = new Scanner(System.in);
	
	public static void main (String[] args) {
		
		System.out.print("Enter a value: ");
		int v = scanner.nextInt();
		
		System.out.print("Enter another value: ");
		int w = scanner.nextInt();
		
		// TERNARY OPERATOR in java ?:
		// this operator can be use as a substitution for IF-Else only for some instances
		// the ? is the if
		// the : is the else
		// however remember that this doesn't replace the IF-Else statement
		String valueTaker = v > w
				? v+" that's within V, is greater than the value of W that's "+w
				: w+" that's within W, is greater than the value of V that's "+v;
		
		System.out.println(valueTaker);
		
	}
}
