import java.util.Scanner;
// March 13 2024
public class Main {
	
	public static void main (String [] args) {
		
		Scanner scanner = new Scanner (System.in);
		
		System.out.print("Enter seconds: ");
		int iSeconds = scanner.nextInt();
		
		int iRemainingMinutes = iSeconds / 60;
		int iRemainingSeconds = iSeconds % 60;
		
		System.out.println(iSeconds+ " seconds is equal to " +iRemainingMinutes+ " minutes and " +iRemainingSeconds+ " seconds.");
		
	}
}
